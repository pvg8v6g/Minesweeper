<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<VBox fx:id="root"
      xmlns="https://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="scenes.main.MainScene"
      styleClass="theme-back"
      spacing="15.0"
      alignment="CENTER">
    <VBox spacing="40.0"
          alignment="CENTER">
        <VBox spacing="5.0"
              alignment="CENTER">
            <Label styleClass="title-label"
                   text="Minesweeper"/>
            <Label styleClass="title-label"
                   text="Choose your difficulty."/>
        </VBox>
        <VBox spacing="10.0"
              alignment="CENTER">
            <Button text="Easy"
                    prefWidth="150.0"
                    prefHeight="35.0"
                    onAction="#easyAction"/>
            <Button text="Medium"
                    prefWidth="150.0"
                    prefHeight="35.0"
                    onAction="#mediumAction"/>
            <Button text="Hard"
                    prefWidth="150.0"
                    prefHeight="35.0"
                    onAction="#hardAction"/>

        </VBox>
    </VBox>
</VBox>
